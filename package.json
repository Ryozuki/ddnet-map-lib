{
  "name": "ddnet-map-lib",
  "version": "0.1.0",
  "description": "Manipulate ddnet maps",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/Ryozuki/ddnet-map-lib",
  "author": "Ryozuki",
  "license": "MIT",
  "private": false,
  "keywords": [
    "teeworlds",
    "ddnet",
